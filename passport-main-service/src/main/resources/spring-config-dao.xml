    <!--总数据源-->
    <bean id="dataSource" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="driverClass">
            <value>${passport.jdbc.driver}</value>
        </property>
        <property name="acquireIncrement">
            <value>5</value>
        </property>
        <property name="idleConnectionTestPeriod">
            <value>3000</value>
        </property>
        <property name="checkoutTimeout">
            <value>30000</value>
        </property>
        <property name="maxPoolSize">
            <value>80</value>
        </property>
        <property name="minPoolSize">
            <value>10</value>
        </property>
        <property name="maxStatements">
            <value>6000</value>
        </property>
        <property name="initialPoolSize">
            <value>5</value>
        </property>
    </bean>

    <!--spAccountDataSource-->
    <bean id="spAccountDataSource" parent="dataSource"
          class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="jdbcUrl" value="${passport.jdbc.sp_account.url}"/>
        <property name="user" value="${passport.jdbc.username}"/>
        <property name="password" value="${passport.jdbc.password}"/>
    </bean>

    <bean id="sqlSessionFactory_spaccount" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="spAccountDataSource"/>
        <property name="configLocation" value="classpath:mybatis-config-account.xml"/>
    </bean>

    <!--自动查找类路径下的映射器并将它们自动装配-->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="sqlSessionFactory" ref="sqlSessionFactory_spaccount"/>
        <property name="basePackage" value="com.sogou.upd.passport.dao.account"/>
    </bean>


    <!--spAppConfigDataSource-->
    <bean id="spAppConfigDataSource" parent="dataSource"
          class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
        <property name="jdbcUrl" value="${passport.jdbc.sp_app.url}"/>
        <property name="user" value="${passport.jdbc.username}"/>
        <property name="password" value="${passport.jdbc.password}"/>
    </bean>

    <bean id="sqlSessionFactory_spapp" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="spAppConfigDataSource"/>
        <property name="configLocation" value="classpath:mybatis-config-appconfig.xml"/>
    </bean>

    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="sqlSessionFactory" ref="sqlSessionFactory_spapp"/>
        <property name="basePackage" value="com.sogou.upd.passport.dao.app"/>
    </bean>

