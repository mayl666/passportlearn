<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- ==============memcache socket pools conf=========================== -->
    <bean id="TokenPool" class="com.danga.MemCached.SockIOPool"
          factory-method="getInstance" init-method="initialize" destroy-method="shutDown">
        <constructor-arg>
            <value>TokenPool</value>
        </constructor-arg>
        <property name="servers">
            <value>10.10.71.26:11213</value>
        </property>
        <property name="initConn" value="20"/>
        <property name="minConn" value="100"/>
        <property name="maxConn" value="250"/>
        <property name="maintSleep" value="30"/>
        <property name="nagle" value="false"/>
        <property name="socketTO" value="3000"/>
    </bean>

    <bean id="FreshTokenPool" class="com.danga.MemCached.SockIOPool"
          factory-method="getInstance" init-method="initialize" destroy-method="shutDown">
        <constructor-arg>
            <value>FreshTokenPool</value>
        </constructor-arg>
        <property name="servers">
            <value>192.168.131.22:11211</value>
        </property>
        <property name="initConn" value="20"/>
        <property name="minConn" value="100"/>
        <property name="maxConn" value="250"/>
        <property name="maintSleep" value="30"/>
        <property name="nagle" value="false"/>
        <property name="socketTO" value="3000"/>
    </bean>


    <bean id="tokenMaster" class="com.danga.MemCached.MemCachedClient">
        <constructor-arg>
            <value>TokenPool</value>
        </constructor-arg>
    </bean>

    <bean id="rTokenMaster" class="com.danga.MemCached.MemCachedClient">
        <constructor-arg>
            <value>FreshTokenPool</value>
        </constructor-arg>
    </bean>

    <bean id="memUtils" class="com.sogou.upd.passport.common.utils.MemcacheUtils">
          <property name="tokenMaster" ref="tokenMaster"/>
          <property name="rTokenMaster" ref="rTokenMaster"/>
    </bean>

</beans>