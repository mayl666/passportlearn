        <fieldset>
            <legend>基本资料</legend>
            <div class="opt-area">
                <div class="state-wrapper hide">
                    <div class="post-state success"></div>
                </div>
                <div class="control-group clearfix">
                    <label>账号</label>
                    <div class="controls">
                        <input autocomplete="off" disableautocomplete type="text" value="${userid}" id="pro_sname" disabled="true"/>
